<div class="row-fluid">
	<div class="span3">
		<ul class="unstyled listBorder">
			<li>
				<%= link_to "Dashboard", dashboard_path,
					class: "btn btn-success btn-block" %>
			</li>
			<li>
				<%= link_to "View Honoreds", honoreds_path,
					class: "btn btn-success btn-block" %>
			</li>
		</ul>
	</div>
	<div class="span8">
		<h1>Create Honored Account</h1>	
		<%= form_for(@honored, :html => { :class => 'form-horizontal listBorder', 
				:multipart => true }) do |f| %>
			<div class='control-group'>
				<%= f.label :first_name, class: 'control-label' %>
				<div class='controls'>
					<%= f.text_field :first_name, required: true %>
				</div>
			</div>
			<div class='control-group'>
				<%= f.label :last_name, class: 'control-label' %>
				<div class='controls'>
					<%= f.text_field :last_name, required: true %>
				</div>
			</div>
		<div class="mystyle" style="margin-bottom:50px">
			<h3>Important !</h3>
			<p>
				The following is optional information that will help others find your loved one.
				Please don't enter information if you do not feel confortable letting others view it.
			<p>
		</div>
		<div class='control-group'>
			<%= f.label :date_of_birth, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :date_of_birth, class: 'datepicker' %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :date_of_death, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :date_of_death, class: 'datepicker' %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :city, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :city %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :state, class: 'control-label' %>
			<div class='controls'>
				<%= f.text_field :state, size: 2, maxlength: 2 %>
			</div>
		</div>
		<div class='control-group'>
			<%= f.label :description, class: 'control-label' %>			
			<div class='controls'>
				<%= f.text_area :description, rows: 5, width: 256 %>
			</div>			
		</div>
		<div class='control-group'>
			<%= f.label "Image of your loved one", class: 'control-label' %>
			<div class='controls'>
				<%= f.file_field :avatar %>
			</div>
		</div>
		<div class='control-group'>
			<div class='controls'>
				<%= f.submit "Submit", class: "btn btn-primary" %>
				<%= link_to "Cancel", dashboard_path, class: "btn btn-warning" %>
			</div>
		</div>
	<% end %>
	</div>
</div>