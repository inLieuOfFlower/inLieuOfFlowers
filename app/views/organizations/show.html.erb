<div class="row-fluid">
	<div class="span3">
		<ul class="unstyled listBorder">
			<li>
				<%= link_to "Dashboard", dashboard_path,
					class: "btn btn-success btn-block" %>
			</li>
			<li>
				<%= link_to "View Organizations", organizations_path,
					class: "btn btn-success btn-block" %>
			</li>
			<li>
				<%= link_to "View Honoreds", honoreds_path,
					class: "btn btn-success btn-block" %>
			</li>
		</ul>
	</div>
	<div class="span8">
		<ul class='unstyled listBorder'>
			<li style="margin-bottom: 50px">
				<%= image_tag @organization.avatar.url(:thumb) %>
			</li>
			<li><b>Name:</b> <%= @organization.name %></li>
			<li><b>Street:</b> <%= @organization.street %></li>
			<li><b>City:</b> <%= @organization.city %></li>
			<li><b>State:</b> <%= @organization.state %></li>
			<li><b>Zip:</b> <%= @organization.zip %></li>
			<li><b>Phone:</b> <%= @organization.phone %></li>
			<li><b>Email:</b> <%= @organization.email %></li>
			<li><b>Contact Name:</b> <%= @organization.contact_name %></li>
		</ul>
	</div>
</div>
<div class="row-fluid">
	<div class="span8 offset2 text-center" %>
		<% if current_user.administrator %>
			<%= link_to "Delete", @organization, 
				method: :delete, data: { confirm: "You sure?" }, class: "btn btn-warning" %>
			<%= link_to "Edit", edit_organization_path(@organization), 
				class: "btn btn-success" %>
		<% end %>		
	</div>
</div>
