<div class="row-fluid">
  <div class="span3">
    <ul class="unstyled listBorder">
      <li>
        <%= link_to "Dashboard", dashboard_path,
          class: "btn btn-success btn-block" %>
      </li>
     </ul>
  </div>
  <div class="span8">
    <h1>Edit Organization</h1>
    <% @organization.errors.full_messages.each do |msg| %>
      <p class='alert alert-error'><%= msg %></p>
    <% end %>
    <%= form_for(@organization, :html => { :method => :put, 
        :class => 'form-horizontal listBorder' }) do |f| %>
    	<div class='control-group'>
  			<%= f.label :name, class: 'control-label' %>
  			<div class='controls'>
  				<%= f.text_field :name, required: true %>
  			</div>
  		</div>
  		<div class='control-group'>
  			<%= f.label :street, class: 'control-label' %>
  			<div class='controls'>
  				<%= f.text_field :street, required: true %>
  			</div>
  		</div>

  		<div class='control-group'>
    			<%= f.label :city, class: 'control-label' %>
    			<div class='controls'>
    				<%= f.text_field :city, required: true %>
    			</div>
    		</div>

    		<div class='control-group'>
    			<%= f.label :state, class: 'control-label' %>
    			<div class='controls'>
    				<%= f.text_field :state, required: true %>
    			</div>
    		</div>

    		<div class='control-group'>
    			<%= f.label :zip, class: 'control-label' %>
    			<div class='controls'>
    				<%= f.text_field :zip, required: true %>
    			</div>
    		</div>

    		<div class='control-group'>
    			<%= f.label :phone, class: 'control-label' %>
    			<div class='controls'>
    				<%= f.text_field :phone, required: true, 
              placeholder: "(123)956-7890", class: "phone" %>
    			</div>
    		</div>

    		<div class='control-group'>
    			<%= f.label :email, class: 'control-label' %>
    			<div class='controls'>
    				<%= f.text_field :email, required: true %>
    			</div>
    		</div>

    		<div class='control-group'>
    			<%= f.label :contact_name, class: 'control-label' %>
    			<div class='controls'>
    				<%= f.text_field :contact_name, required: true %>
    			</div>
    		</div>
        <div class='control-group'>     
          <%= f.label :avatar, class: 'control-label' %>
          <div class='controls'>
            <%= f.file_field :avatar %>
          </div>
        </div>
        <div class='control-group'>
          <div class='controls'>
            <%= f.submit "Update Organization", class: "btn btn-success" %>
            <%= link_to "Cancel", organization_path(@organization), 
              class: "btn btn-warning" %>
        </div>
      </div>
  	<% end %>
  </div>
</div>